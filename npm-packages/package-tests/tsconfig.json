{
  "include": ["*.ts"],
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2020",
    "module": "Node16",
    "declaration": true,
    "declarationMap": true,
    "noEmit": true,
    "stripInternal": true,
    "moduleResolution": "Node16",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": false,
    "jsx": "react"
  }
}
