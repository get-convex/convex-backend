{
  "include": ["src"],
  "exclude": ["src/**/*.test.ts"],
  "compileOnSave": true,
  "compilerOptions": {
    /* Basic Options */
    "target": "es2020",
    "module": "es2020",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist/esm",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    /* Strict Type-Checking Options */
    "strict": true,
    /* Module Resolution Options */
    "esModuleInterop": true,
    /* Advanced Options */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
